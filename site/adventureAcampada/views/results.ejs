<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	<link rel="stylesheet" href="../stylesheets/style2.css">
	
	
    <main class="productos general">
		
			
				<h2 class="products-title" id="productos">Resultados de la búsqueda: <%= search %> </h2>
			
				<% if (result[0] != undefined) { %>
					
						<section class="container">
				
							<% result.forEach(product => { %>
							  <div class="product">
								<a href="/products/detail/<%- product.id %> ">
								  <img src="/img/products/<%= product.imagenes[0].image %>" alt="imagen de producto">
								  <h5>$ <%- product.price %></h5>  
								  <p><%- product.name %></p>
								</a>
							  </div> 
							<% }) %>
						  
						</section>
				<% } else { %>
					<div class="col-12">
						<h2 class="products-title" style="color: #38726C;">No hay productos que coincidan su búsqueda</h2>
					</div>
				<% } %>
			

	</main>
	<!-- todos los productos -->
	
	<!-- /todos los productos -->
	<%- include('partials/scripts') %>
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>