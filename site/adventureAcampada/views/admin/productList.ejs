<!DOCTYPE html>
<html lang="es">

<!-- HEAD -->
<%- include('partials/head')  %>  
<link rel="stylesheet" href="../../stylesheets/style2.css"> 
<link rel="stylesheet" href="../../../stylesheets/style.css">
<!-- /HEAD -->

<!-- CSS -->

<!-- /CSS -->
<body>

<!-- HEADER -->
<%- include('partials/header')  %> 
<!-- /HEADER -->


<!--Inicio Home-->
<main class="container general" style="margin-top: 140px;">
  

  <h2>mis productos</h2>

  <section class="container">
    <div class="row">
    <% products.forEach(product => { %>
      <article class="col-sm-12 col-md-4 col-lg-3 ">
        <div class="targeta-product-admin">
          <div class="product">
            <a href="/products/detail/<%- product.id %> ">
              <img src="/img/products/<%= product.imagenes[0].image %>" alt="imagen de producto">
              <h5>$ <%- product.price %></h5>  
              <p><%- product.name %></p>
            </a>
          </div>
          <div class="botones-admin">
            <div class="m-4 d-flex">
                <a href="/admin/products/edit/<%= product.id %> " class="btn btn-sm btn-success">Editar</a>
                <form action="/admin/products/delete/<%= product.id %>?_method=DELETE " method="POST">
                  <button class="btn btn-sm btn-danger" type="submit">Eliminar</button>
                </form>
            </div>
          </div>

        </div>
        

      </article>
    
    <% }) %>
  </div>
  </section>


  
  

</main>
  
  <!--Fin Home-->
 <!-- SCRIPTS -->
 <%- include('partials/scripts')  %> 
 <!-- /SCRIPTS -->

</body>
  <!--FOOTER-->
  <%-include('partials/footer') %>  
  <!--/FOOTER-->
</html>